{
    "name": "lionshare-desktop",
    "version": "1.1.0",
    "description": "Simple cryptocurrency portfolio for OS X",
    "main": "./desktop/index.js",
    "bin": {
        "lionshare": "node_modules/.bin/electron desktop"
    },
    "scripts": {
        "clean": "npx rimraf ./desktop/dist dist/*",
        "build:webpack": "npx cross-env NODE_ENV=production BUILD_DEV=false webpack --config desktop/webpack/webpack.config.prod.js --progress --colors --display-error-details",
        "build": "npm run clean && npm run build:webpack",
        "pack": "npm run build && build --dir",
        "dist": "npm run build && build",
        "start": "ENV=development npx electron desktop",
        "dev": "npx concurrently -k -n 'node desktop/server.dev.js' 'npm start'",
        "test": "npx eslint --max-warnings 1 **/src/** ; npx prettier-check **/src/** ; npx prettier-check **/desktop/**",
        "lint:staged": "lint-staged"
    },
    "pre-commit": "lint:staged",
    "lint-staged": {
        "*.{js,jsx,json,css,scss,md}": [
            "npx prettier --write",
            "git add"
        ],
        "*.{js}": [
            "npx eslint --fix",
            "git add"
        ]
    },
    "build": {
        "appId": "com.jorilallo.lionshare",
        "icon": "src/assets/icons/appicon.icns",
        "files": "!dist/*",
        "mac": {
            "target": "zip"
        }
    },
    "author": "Jori Lallo <jori@coinbase.com>, Ben Jennings <ben@coinbase.com>, Maksim Stepanenko <maksim@coinbase.com>",
    "license": "MIT",
    "dependencies": {
        "auto-launch": "^5.0.5",
        "babel-core": "^6.26.3",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.5",
        "babel-plugin-transform-decorators-legacy": "^1.3.5",
        "babel-polyfill": "^6.26.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "chart.js": "^2.7.3",
        "classnames": "^2.2.6",
        "concurrently": "^4.1.0",
        "cross-env": "^5.2.0",
        "css-loader": "^2.1.0",
        "dotenv": "^6.2.0",
        "electron": "^4.0.1",
        "electron-builder": "^20.38.4",
        "electron-config": "^2.0.0",
        "electron-is-dev": "^1.0.1",
        "eslint": "^5.12.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^3.3.0",
        "eslint-import-resolver-webpack": "^0.10.1",
        "eslint-plugin-import": "^2.14.0",
        "eslint-plugin-jsx-a11y": "^6.1.2",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.12.3",
        "exports-loader": "^0.7.0",
        "express": "^4.16.4",
        "file-loader": "^3.0.1",
        "isomorphic-fetch": "^2.2.1",
        "json-loader": "^0.5.7",
        "lint-staged": "^8.1.0",
        "lodash": "^4.17.11",
        "mobx": "^5.8.0",
        "mobx-react": "^5.4.3",
        "mobx-react-devtools": "^6.0.3",
        "node-machine-id": "^1.1.10",
        "node-sass": "^4.11.0",
        "node-static": "^0.7.11",
        "numeral": "^2.0.6",
        "pre-commit": "^1.2.2",
        "prettier": "^1.15.3",
        "prettier-check": "^2.0.0",
        "prop-types": "^15.6.2",
        "react": "^16.7.0",
        "react-chartjs-2": "^2.7.4",
        "react-dom": "^16.7.0",
        "rebass": "^3.0.0",
        "reconnecting-websocket": "^4.1.10",
        "reflexbox": "^3.0.1",
        "resolve-url": "^0.2.1",
        "resolve-url-loader": "^3.0.0",
        "rimraf": "^2.6.3",
        "sass": "^1.15.3",
        "sass-loader": "^7.1.0",
        "sset": "^0.0.4",
        "style-loader": "^0.23.1",
        "svg-react-loader": "^0.4.6",
        "universal-analytics": "^0.4.20",
        "url-loader": "^1.1.2",
        "webpack": "^4.28.3",
        "webpack-dev-middleware": "^3.5.0",
        "webpack-target-electron-renderer": "^0.4.0"
    },
    "devDependencies": {
        "prettier": "^1.15.3",
        "prettier-check": "^2.0.0",
        "prettier-stylelint": "^0.4.2",
        "prettier-tslint": "^0.4.2",
        "webpack-cli": "^3.2.0"
    }
}
